<h1>Discover Movies</h1>
<%= form_with url: '/movies', method: :get, local: true do |form| %>
  <%= form.label :query, "Search by title:" %>
  <br>
  <%= form.text_field :query %>
  <%= form.submit "Search" %>
<% end %>
<%= button_to "Top Rated Movies", movies_path(params[:query] == "top rated"), method: :get %>